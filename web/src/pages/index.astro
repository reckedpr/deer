---
import MainLayout from "../layouts/MainLayout.astro"
import { Code } from 'astro:components';

const imgJson = `{
  "img_url": "http://deer.rest/static/img/NIdOk.jpg"
}`
const factJson = `{
  "fact": "Deer communicate using body language, sounds, and scent."
}`
---

<MainLayout title="deer.rest">
	<div>
		<section class="mb-16">
			<h1 class="text-4xl font-bold mr-128">deer.rest</h1>
			<p class="text-slate-900/60">A RESTful Deer API, for all your deer needs !!</p>
		</section>

		<section>
			<h2 class="text-2xl font-bold mb-4">Endpoints</h2>
			<div class="ml-4 mb-8">
				<a href="https://api.deer.rest/" class="text-pink-400 text-lg">api.deer.rest</a>
				<Code
					class="rounded-md p-4 mt-2"
					code={imgJson} 
					lang="json"
					theme="catppuccin-latte"
					/>
			</div>
			<div class="ml-4">
				<a href="https://api.deer.rest/fact/" class="text-pink-400 text-lg">api.deer.rest/fact</a>
				<Code
					class="rounded-md p-4 mt-2"
					code={factJson} 
					lang="json"
					theme="catppuccin-latte"
					/>
			</div>
			
		</section>
	</div>
</MainLayout>